<UserControl x:Class="ModuleTracker.Wpf.Components.ModulesListingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleTracker.Wpf.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Padding="5 10" TextBlock.FontSize="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
    
                <TextBlock Grid.Column="0" Text="{Binding Name}" TextWrapping="Wrap" Margin="0 0 5 0"/>
                <TextBlock Grid.Column="1" Text="{Binding ExercisePercentage}" Margin="0 0 5 0"/>
                <TextBlock Grid.Column="2" Text="%" Margin="0 0 5 0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
